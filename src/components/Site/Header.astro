---
import Navigation from './Header/Navigation.svelte'
import Preference from './Header/Preference.svelte'
import SiteLogo from './Header/SiteLogo.astro'
import HeaderScript from './Header/HeaderScript.svelte'
---

<HeaderScript client:load />
<div class='Mask' id='MaskOfHeader'>
  <div class='headerOutline'>
    <div class='headerWrapper'>
      <div class='headerItemWrapper'>
        <SiteLogo />
      </div>
      <div class='headerItemWrapper'>
        <Navigation />
      </div>
      <div class='headerItemWrapper'>
        <Preference client:load />
      </div>
    </div>
    <div id='controlPanel-container'></div>
  </div>
</div>

<style scoped>
  .headerOutline {
    width: 100%;
    z-index: 10;
    position: sticky;
    top: 0;
    pointer-events: auto;
  }

  .headerWrapper {
    overflow: hidden;
    background: var(--background-color);
    padding: 0 var(--header-padding);
    height: var(--header-height);
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    place-items: center;
    transition: height ease 200ms;
    & .headerItemWrapper:first-child {
      margin-right: auto;
    }
    & .headerItemWrapper:nth-child(2) {
      display: none;
    }
    & .headerItemWrapper:nth-child(3) {
      margin-left: auto;
    }
  }

  @media (min-width: 768px) {
    .headerWrapper {
      grid-template-columns: repeat(3, 1fr);
      & .headerItemWrapper:nth-child(2) {
        display: inline !important;
        margin: auto;
      }
    }
  }
</style>
